{
	"name": "veritak-financial-platform",
	"version": "1.0.0",
	"description": "Veritak Financial Research LLC - Cyberpunk-themed Financial Analysis & Stock Prediction Platform",
	"scripts": {
		"dev": "next dev -p 3000",
		"dev:api": "next dev -p 3002",
		"dev:clean": "./scripts/dev-clean.sh",
		"dev:status": "./scripts/dev-status.sh",
		"dev:emergency": "./scripts/emergency-cleanup.sh",
		"dev:monitor": "./scripts/dev-monitor.sh",
		"dev:setup": "./scripts/dev-setup.sh",
		"dev:health": "./scripts/daily-health-check.sh",
		"dev:port-check": "lsof -i:3000 || echo 'Port 3000 is available'",
		"dev:kill": "pkill -f 'next dev' && pkill -f 'npm.*dev' || true",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"type-check": "tsc --noEmit",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "node --max-old-space-size=4096 --expose-gc node_modules/.bin/jest --runInBand",
		"test:watch": "node --max-old-space-size=4096 --expose-gc node_modules/.bin/jest --watch --maxWorkers=1",
		"test:coverage": "node --max-old-space-size=4096 --expose-gc node_modules/.bin/jest --coverage --runInBand",
		"test:performance": "node --max-old-space-size=4096 --expose-gc --trace-gc node_modules/.bin/jest --runInBand --testPathPattern=performance.test.ts --verbose --logHeapUsage",
		"test:performance:single": "node --max-old-space-size=4096 --expose-gc node_modules/.bin/jest --runInBand --testPathPattern=SentimentAnalysisService.performance.test.ts",
		"test:performance:memory": "node --max-old-space-size=4096 --expose-gc --trace-gc node_modules/.bin/jest --runInBand --testNamePattern=\"Memory Leak Prevention\"",
		"test:performance:cache": "node --max-old-space-size=4096 --expose-gc node_modules/.bin/jest --runInBand --testNamePattern=\"Cache Performance\""
	},
	"dependencies": {
		"@types/bcrypt": "^6.0.0",
		"@types/d3": "^7.4.3",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/pg": "^8.15.5",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"autoprefixer": "^10.4.16",
		"axios": "^1.12.2",
		"bcrypt": "^6.0.0",
		"d3": "^7.8.5",
		"dotenv": "^17.2.2",
		"fast-xml-parser": "^5.2.5",
		"ioredis": "^5.7.0",
		"jsonwebtoken": "^9.0.2",
		"next": "^15.5.3",
		"node-fetch": "^3.3.2",
		"nodemailer": "^7.0.6",
		"pg": "^8.16.3",
		"playwright": "^1.40.0",
		"postcss": "^8.4.31",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"redis": "^5.8.2",
		"tailwindcss": "^3.3.0",
		"trading-signals": "^7.0.0",
		"typescript": "^5.2.0",
		"zod": "^4.1.8"
	},
	"devDependencies": {
		"@jest/globals": "^30.1.2",
		"@playwright/test": "^1.55.0",
		"@types/jest": "^30.0.0",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"eslint": "^8.52.0",
		"eslint-config-next": "^15.5.3",
		"jest": "^30.1.3",
		"prettier": "^3.0.0",
		"ts-jest": "^29.4.1"
	}
}
